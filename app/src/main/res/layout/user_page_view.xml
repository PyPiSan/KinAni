<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.UserPageView"
    android:layout_marginBottom="20dp"
    android:background="@color/primaryColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            android:contentDescription="@string/back" />

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/anonymous"
            />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/primaryTextColor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_layout"
        >
        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/about_app"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:drawablePadding="10dp"
            android:textColor="@color/primaryTextColor"
            app:drawableLeftCompat="@drawable/info_outline_24"
            app:drawableRightCompat="@drawable/keyboard_arrow_right_24"
            android:background="@drawable/round_layout_user"
            android:foreground="@drawable/click_effect_round"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/about_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/cardBackground"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/about_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="@color/primaryTextColor"
                android:paddingBottom="5dp"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/Notification"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryTextColor"
            app:drawableLeftCompat="@drawable/notifications_outline_24"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:focusable="true"
            app:drawableRightCompat="@drawable/keyboard_arrow_right_24"
            android:background="@drawable/round_layout_user"
            android:foreground="@drawable/click_effect_round"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/notifications_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/cardBackground"
            android:visibility="gone"
            >
        <TextView
            android:id="@+id/notification_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/primaryTextColor"
            android:paddingBottom="5dp"
            />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/change_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/change_icon"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryTextColor"
            app:drawableLeftCompat="@drawable/insert_emoticon"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_layout_user"
            android:foreground="@drawable/click_effect_round"
            />
        <TextView
            android:id="@+id/privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/privacy"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryTextColor"
            app:drawableLeftCompat="@drawable/privacy_tip_24"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_layout_user"
            android:foreground="@drawable/click_effect_round"
            />
        <TextView
            android:id="@+id/issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/issue"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryTextColor"
            app:drawableLeftCompat="@drawable/report_problem_24"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_layout_user"
            android:foreground="@drawable/click_effect_round"
            />
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/log_out"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryTextColor"
            app:drawableLeftCompat="@drawable/baseline_logout_24"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_layout_user"
            android:foreground="@drawable/click_effect_round"/>
        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/delete_account"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/primaryTextColor"
            app:drawableLeftCompat="@drawable/baseline_delete_24"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/round_layout_user"
            android:foreground="@drawable/click_effect_round"
            />
<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="@color/primaryDarkColor"-->
<!--            android:layout_marginStart="50dp"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            />-->

        <TextView
            android:id="@+id/appAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/primaryTextColor"
            />

    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>